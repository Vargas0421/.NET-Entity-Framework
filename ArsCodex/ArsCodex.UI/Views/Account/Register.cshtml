@model ArsCodex.UI.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title - SB Admin</title>

    <!-- Estilos SB Admin Bootstrap 5 -->
    <link href="~/Content/sb-admin-5/css/styles.css" rel="stylesheet" />
    
</head>
<body class="bg-primary">

    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main style="height: 70vh">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Crear Cuenta</h3>
                                </div>
                                <div class="card-body">
                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary("", new { @class = "text-danger" })



                                        <div class="row mb-4" style="margin-left: 3%">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo electrónico" })
                                                    <label for="Email">Correo electrónico</label>
                                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
                                                    <label for="Password">Contraseña</label>
                                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row mb-4" style="margin-left: 3%">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    @Html.DropDownListFor(
                                                        m => m.Rol,
                                                        new SelectList(new[] {
                                                                new { Value = true, Text = "Administrador" },
                                                                new { Value = false, Text = "Contador" }
                                                        }, "Value", "Text"),
                                                        "Seleccione un rol",
                                                        new { @class = "form-select" })
                                                    <label for="Rol">Rol</label>
                                                    @Html.ValidationMessageFor(m => m.Rol, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar contraseña" })
                                                    <label for="ConfirmPassword">Confirmar contraseña</label>
                                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>


                                        <div class="mt-4 mb-0">
                                            <div class="d-grid">
                                                <button type="submit" class="btn btn-primary btn-block">Crear cuenta</button>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small">
                                        @Html.ActionLink("¿Ya tienes una cuenta? Inicia sesión", "Login", "Account")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
       
    </div>


    @Scripts.Render("~/bundles/jqueryval")
    @section scripts {
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/Scripts/UI/script.js"></script>
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    }
</body>
</html>
