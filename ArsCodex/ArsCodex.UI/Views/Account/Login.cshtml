@using ArsCodex.UI.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title - SB Admin</title>

    <link href="~/Content/sb-admin-5/css/styles.css" rel="stylesheet" />
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main style="height: 70vh">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Iniciar sesión</h3></div>
                                <div class="card-body" style="display: flex; justify-content: center">

                                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="form-floating mb-3">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "nombre@ejemplo.com" })
                                            <label for="Email">Correo electrónico</label>
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-floating mb-3">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
                                            <label for="Password">Contraseña</label>
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-check mb-3">
                                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", id = "RememberMe" })
                                            <label class="form-check-label" for="RememberMe">Recordarme</label>
                                        </div>

                                        <div class="d-flex align-items-center justify-content-center mt-4 mb-0">
                                            @* <a class="small" href="#">¿Olvidaste tu contraseña?</a> *@
                                            <button type="submit" class="btn btn-primary">Ingresar</button>
                                        </div>
                                    }

                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small">
                                        @Html.ActionLink("¿No tienes una cuenta? Regístrate", "Register", "Account")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

        
    </div>

    @Scripts.Render("~/bundles/jqueryval")
    @section scripts {
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/Scripts/UI/script.js"></script>
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    }
</body>
</html>
