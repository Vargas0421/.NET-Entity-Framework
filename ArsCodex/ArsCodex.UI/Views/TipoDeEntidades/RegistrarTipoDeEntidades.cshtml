@model ArsCodex.Abstracciones.ModelosParaUI.TipoDeEntidadesDto

@{
    ViewBag.Title = "Registrar Tipo de Entidad";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="fas fa-tags me-2"></i>
            <h5 class="mb-0">Registrar Tipo de Entidad</h5>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.NombreTipoEntidad, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.NombreTipoEntidad, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NombreTipoEntidad, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Descripcion, new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3 })
                    @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between">
                @Html.ActionLink("Volver al listado", "ListarTipoDeEntidades", null, new { @class = "btn btn-outline-secondary", @role = "button" })
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Registrar
                </button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
