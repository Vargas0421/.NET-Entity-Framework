<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>


    <link href="https://use.fontawesome.com/releases/v6.3.0/css/all.css" rel="stylesheet" />

    @Styles.Render("~/Content/css/style.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="sb-nav-fixed">

    <!-- NAVBAR SUPERIOR -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="@Url.Action("Index","Home")">Mi aplicación ASP.NET</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fa fa-bars"></i></button>

        <!-- Zona derecha (parcial de login) -->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                @Html.Partial("_LoginPartial")
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">

        <!-- SIDEBAR IZQUIERDO -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Administrador"))
                            {
                                <a class="nav-link" href="@Url.Action("ListarTipoDeEntidades", "TipoDeEntidades")"><div class="sb-nav-link-icon"><i class="fas fa-building"></i></div> Tipo de Entidad</a>
                                <a class="nav-link" href="@Url.Action("ListarEntidad","Entidad")"><div class="sb-nav-link-icon"><i class="fas fa-table"></i></div> Entidades</a>
                                <a class="nav-link" href="@Url.Action("ListarReservaDeLiquidez", "ReservaDeLiquidez")"><div class="sb-nav-link-icon"><i class="fas fa-coins"></i></div> Reserva de Liquidez</a>
                                <a class="nav-link" href="@Url.Action("ListarBitacora","Bitacora")"><div class="sb-nav-link-icon"><i class="fas fa-book"></i></div> Bitácora</a>
                                <a class="nav-link" href="@Url.Action("ListarContadores","Contadores")"><div class="sb-nav-link-icon"><i class="fas fa-calculator"></i></div> Módulo de Contadores</a>
                                <a class="nav-link" href="@Url.Action("ListarModuloAlertas","ModuloAlertas")"><div class="sb-nav-link-icon"><i class="fas fa-bell"></i></div> Alertas</a>
                            }
                            else
                            {
                                <a class="nav-link" href="@Url.Action("ListarReservaDeLiquidez", "ReservaDeLiquidez")"><div class="sb-nav-link-icon"><i class="fas fa-coins"></i></div> Reserva de Liquidez</a>
                            }
                        }
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Sesión iniciada como:</div>
                    @User.Identity.Name
                </div>
            </nav>
        </div>

        <!-- CONTENIDO PRINCIPAL -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>

            <!-- FOOTER -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</div>
                        <div>
                            @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "text-muted me-2" }) |
                            @Html.ActionLink("Acerca de", "About", "Home", null, new { @class = "text-muted me-2" }) |
                            @Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "text-muted" })
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    @section scripts{
        <script src="~/Scripts/sweetalert/sweetalert2@11.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/Scripts/UI/script.js"></script>
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"></script>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

