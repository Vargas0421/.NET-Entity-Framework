@model ArsCodex.Abstracciones.ModelosParaUI.ReglaDto
@{
    ViewBag.Title = "Registrar Regla";
}

<div class="container-fluid px-4 mt-4">
    <h2 class="mb-4">Registrar Regla</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="card shadow-lg">
            <div class="card-header bg-white">
                <i class="fas fa-gavel me-1"></i> Datos de la regla
            </div>
            <div class="card-body">

                <div class="mb-3">
                    @Html.LabelFor(m => m.Nombre, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Descripcion, new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3 })
                    @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Valor, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.Valor, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.TipoDeAccion, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.TipoDeAccion,
                          new List<SelectListItem>
                          {
                              new SelectListItem { Text = "Min", Value = "1" },
                              new SelectListItem { Text = "Max", Value = "2" }
                          },
                          "-- Seleccione una acción --",
                          new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.TipoDeAccion, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.Label("Tipo de Entidad", new { @class = "form-label" })
                    <input type="text" readonly class="form-control-plaintext" value="@ViewBag.NombreTipoEntidad" />
                </div>

                @Html.HiddenFor(m => m.IdTipoEntidad)

            </div>
            <div class="card-footer text-end">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                @Html.ActionLink("Volver", "ListarRegla", new { idTipoEntidad = Model.IdTipoEntidad }, new { @class = "btn btn-outline-secondary ms-2" })
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
