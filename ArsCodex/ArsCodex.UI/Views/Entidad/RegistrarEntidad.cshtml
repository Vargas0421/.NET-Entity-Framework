@model ArsCodex.Abstracciones.ModelosParaUI.EntidadDto
@{
    ViewBag.Title = "Registrar Entidad";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="fas fa-plus me-2"></i>
            <h5 class="mb-0">Registrar Entidad</h5>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.codigoEntidad, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.codigoEntidad, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.codigoEntidad, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.nombreEntidad, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.nombreEntidad, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.nombreEntidad, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.telefonoEntidad, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.telefonoEntidad, new { @type = "number", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.telefonoEntidad, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.correoElectronico, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.correoElectronico, new { @type = "email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.correoElectronico, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.direccion, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.direccion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.direccion, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.idTipoEntidad, "Tipo de Entidad", new { @class = "form-label fw-bold" })
                    @Html.DropDownListFor(m => m.idTipoEntidad,
                        (SelectList)ViewBag.ListaTiposDeEntidad,
                        "-- Seleccione un tipo --",
                        new { @class = "form-select" })
                </div>

                @Html.HiddenFor(m => m.fechaDeRegistro)
                @Html.HiddenFor(m => m.fechaDeModificacion)
                @Html.HiddenFor(m => m.estado)
            </div>

            <div class="card-footer d-flex justify-content-between bg-white">
                @Html.ActionLink("Cancelar", "ListarEntidad", "Entidad", null, new { @class = "btn btn-outline-secondary" })
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Registrar
                </button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
