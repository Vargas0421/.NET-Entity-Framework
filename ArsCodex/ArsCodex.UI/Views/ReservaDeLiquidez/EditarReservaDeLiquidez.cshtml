@model ArsCodex.Abstracciones.ModelosParaUI.ReservaDeLiquidezDto

@{
    ViewBag.Title = "Editar Reserva de Liquidez";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.IdReservaLiquidez)
    @Html.HiddenFor(m => m.IdEntidad)
    @Html.HiddenFor(m => m.Periodo)
    @Html.HiddenFor(m => m.IdContador)
    @Html.HiddenFor(m => m.FechaDeRegistro)
    @Html.HiddenFor(m => m.FechaDeModificacion)
    @Html.HiddenFor(m => m.Estado)

    <div class="container-fluid px-4 mt-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <i class="fas fa-wallet me-2"></i>
                <h5 class="mb-0">Editar Reserva de Liquidez</h5>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.MontoDeReserva, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.MontoDeReserva, new { @type = "number", step = "0.01", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.MontoDeReserva, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.CantidadDeBeneficiarios, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.CantidadDeBeneficiarios, new { @type = "number", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CantidadDeBeneficiarios, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.MontoDeSeguroBancario, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.MontoDeSeguroBancario, new { @type = "number", step = "0.01", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.MontoDeSeguroBancario, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("ListarReservaDeLiquidez")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Guardar cambios
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
